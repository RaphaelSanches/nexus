.load-overlay{
    width: 100%;
    height: 100%;
    background: #f3f3f3;
    position: fixed;
    z-index: 1000;
    opacity: 1;
    -webkit-animation: appearContent linear 1s 0s 1 forwards;
    -o-animation: appearContent linear 1s 0s 1 forwards;
    animation: appearContent linear 1s 0s 1 forwards;  
}

/*animação de aparição do site */

@-webkit-keyframes appearContent {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
    z-index: -20;
  }
}
@-moz-keyframes appearContent {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
    z-index: -20;
  }
}
@-ms-keyframes appearContent {
  from {
    opacity: 1;
  }
  to {
