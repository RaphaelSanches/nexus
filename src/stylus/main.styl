
/*--------------------- Mixins ---------------------*/
fortransition()
	-webkit-transition arguments
	-moz-transition arguments
	-o-transition arguments
	transition arguments

/*--------------------- Variáveis ---------------------*/

nexus_red = #d80000
dark-grey = #a5a5a5
med-grey = #cecece
light-grey = #F3F3F3


/*--------------------- Estilos ---------------------*/

.ctr
	margin 0 auto

.space-top
	margin-top 30px

.space-bottom
	margin-bottom 30px



/*--------------------- Globais - afetam (quase) todas as páginas ---------------------*/

*,:after,:before
	-webkit-box-sizing:border-box
	-moz-box-sizing:border-box
	box-sizing:border-box

::-webkit-scrollbar 
	background: med-grey;


body
	background light-grey


.header
	width 100%
	height 100px


.container
	width: 1060px
	height auto
	@extends .ctr


.logo
	margin-top 23px
	float left
	
.nav-main
	height auto
	float right
	margin-top 38px
		
	/* item do menu dp topo */
	.nav-main-item
		margin 0px
		float left
		background #000
		margin 0px 20px
		padding 2px 8px
		position relative
		font-size 20px
		
		a
			color #fff
			padding 6px 0px
		
		/* efeito "pontiagudo" do menu */
		&:before
			content ""
			width 0
			height 0
			position absolute
			left -20px
			bottom 0px
			border-bottom 27px solid #000
			border-left 20px solid transparent
		
		/* efeito "pontiagudo" do menu */
		&:after
			content ""
			width 0
			height 0
			position absolute
			right -20px
			top 0px
			border-top 27px solid #000
			border-right 20px solid transparent
		
		

		
