/* div que possui as principais informações do experimento da página*/
.main-experimento
	width 772px
	float left
	padding-bottom 80px

/* banner com a imagem principal do experimento */
.banner-experimento
	width: 100%
	height 434px
	background med-grey
	margin-bottom 30px
	position relative
	overflow hidden
	
	img
		width 100%
		
	.container-titulo-experimento
		min-width: 606px
		padding: 10px
		position absolute
		bottom 0
		left 0
		margin 20px 0px 0px 0px
		background nexus_red
		color #fff
		font-family "Planer"
		
		&:after{
			content ""
			width 90%
			height 10px
			position absolute
			top -10px
			left 0
			background #000
		}
		
		h2
			font-size 40px
			color #fff
			position relative
			padding 0
			margin 0px
			
			&:before
			&:after{
				content attr(data-text)
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				color #fff
			}
		
			&:before
				left 3px
				text-shadow -3px 0 black
				background nexus_red //importante ser o mesmo da div
			
			
			&:after
				left -3px
				text-shadow -2px 0 blue
				clip: rect(44px, 450px, 56px, 0);
				background nexus_red //importante ser o mesmo da div


