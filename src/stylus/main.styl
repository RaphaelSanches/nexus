// Box de texto com os cantos com detalhes em vermelho
.box-texto-corner
	width 100%
	padding 60px 60px 
	color #000
	position relative
	
	&:before{
		content " "
		background url(../../src/img/corner.svg) no-repeat
		position absolute
		left 0px
		bottom -20px
		width 195px
		height 195px
	}
	
	&:after{
		content " "
		background url(../../src/img/corner.svg) no-repeat
		position absolute
		top -20px
		right 0px
		transform rotate(180deg)
		width 195px
		height 195px
	}
	


